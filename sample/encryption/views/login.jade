extends layout

block content
  .container
    h1 Login Page
    p.lead input yourname and password "test" to login
    br
    form(role='form', action="login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", value="test", placeholder='Password')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='./')
        button.btn.btn-primary(type="button") Cancel